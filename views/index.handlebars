<div class="container logo">
  <img src="/assets/images/BigBurger.png" class="img-fluid img-rounded center"
    alt="http://clipart-library.com/data_images/149301.png" width=200 height=200>
  <h1 class="text-center">Consume Fried Beef Disks!</h1>
</div>

<div id="wrapper">
  <!-- Image gallery for portfolio -->
  <!-- Use bootstrap rows and columns -->
  <!-- Make images responsive to resize as window shrinks with class img-fluid -->
  <div class="container-fluid bg-3 text-center">

    <div class="row align-items-center">
      <div class="col-sm-12 col-md-6 col-lg-4 d-flex align-items-stretch">
        <div class="card gifCard">
          <div class="card-body">
            <h2>Burgers to Eat!</h2>

            <ul>
              {{#each burgers}}
              {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
              {{/unless}}
              {{/each}}
            </ul>

          </div>
        </div>
      </div>

      <div class="col-sm-12 col-md-6 col-lg-4 d-flex align-items-stretch">
        <div class="card gifCard">
          <div class="card-body">

            <h2>Add a Burger</h2>
            <form class="create-form">

              <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="burger_name">
              </div>

              <div class="form-group">
                <label for="devoured">Devoured?</label><br>
                <input type="radio" name="devoured" value="1"> Devoured!<br>
                <input type="radio" name="devoured" value="0" checked> Ready to Eat
              </div>

              <button type="submit">Add Burger</button>
            </form>

          </div>
        </div>
      </div>

      <div class="col-sm-12 col-md-6 col-lg-4 d-flex align-items-stretch">
        <div class="card gifCard">
          <div class="card-body">

            <h2>Burgers you Ate!</h2>

            <ul>
              {{#each burgers}}
              {{#if devoured}}
              {{> burgers/burger-block devoured=false}}
              {{/if}}
              {{/each}}
            </ul>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>